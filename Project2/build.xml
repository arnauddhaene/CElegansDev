<project name="Project2" default="" basedir=".">
    <description>
    	Project 2 build file
    </description>
  
	<property name="src" location="src" />
  <property name="build" location="bin" />
  <property name="dist"  location="dist" />
 
	 <property name="pluginsDir"  location="$basedir/../../IJ/plugins/" />
 
  <property name="user.name" value="Arnaud Dhaene" />
<target name="main" depends="compress" description="Main target">
	<echo>
		Building the .jar file.
	</echo>
</target>
 <target name="compress" depends="" description="generate the distribution">
 	<jar jarfile="Project2.jar">
 		<fileset dir="." includes="plugins.config" />
		<fileset dir="${build}" includes="**/*.*" />
 		
 		<manifest>
 		 	 	      <attribute name="Built-By" value="Arne Seitz @ EPFL"/>
 		</manifest>
 	</jar>
    <copy file="Project2.jar" toDir="${pluginsDir}" />
  </target>
</project>
